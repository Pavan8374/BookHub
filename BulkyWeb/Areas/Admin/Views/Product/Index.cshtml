@model List<Product>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-link"><i class="fa-solid fa-circle-plus"></i> Create New Product</a>
                </div>
            </div>
            <table class="table table-bordered table-striped" id="myTable" width="100%">
                <thead>
                    <tr>
                       @* <th>
                            Product Image
                        </th>*@
                        <th>
                            Product Title
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            List Price
                        </th>
                        <th>
                            Category
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>

    </div>
</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}

