@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-outline-link"><i class="fa-solid fa-circle-plus"></i> Create New Category</a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>
                                @obj.Name
                            </td>
                            <td>
                                @obj.DisplayOrder
                            </td>
                            <td>
                                <div>
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@obj.Id"><i class="fa-regular fa-pen-to-square" style="color:darkslateblue"></i></a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="fa-solid fa-trash" style="color:red"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>

